<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    tools:context="fragment.Payment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/mybimo_bluefont" />
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/paymentrefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/animationpayment"
                android:layout_width="309dp"
                android:layout_height="228dp"

                android:src="@drawable/payment_icon"
                />

            <RelativeLayout
                android:id="@+id/animation_pay"
                android:layout_width="343dp"
                android:layout_height="197dp"
                >

                <ImageView
                    android:id="@+id/pay_card"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/border_payment" />

                <TextView
                    android:id="@+id/status_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:text=""
                    android:textColor="@color/white"
                    android:textFontWeight="500"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/nama_pembayaran"
                    android:layout_width="113dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="35dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/white"
                    android:textFontWeight="1000"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="130dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/white"
                    android:textFontWeight="1000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/nomor_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textFontWeight="1000"
                    android:textSize="30sp" />

                <!--            -->
                <TextView
                    android:id="@+id/afterpay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/status_pay"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif"
                    android:text="Terimakasih sudah berlangganan\nSemangat Belajar Champs"
                    android:textColor="@color/white"
                    android:textFontWeight="1000"
                    android:visibility="invisible"
                    android:textSize="20sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/upload_file"
                android:layout_marginTop="20dp"
                android:layout_width="344dp"
                android:layout_height="50dp"
                android:text="Upload Bukti Pembayaran"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                android:textFontWeight="700"
                android:textColor="@color/white"
                android:backgroundTint="#4285F4"
                />
            <ImageView
                android:id="@+id/img_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>

        </LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</FrameLayout>