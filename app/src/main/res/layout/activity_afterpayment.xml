<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_white"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/mybimo_bluefont"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/animationpayment"
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:src="@drawable/payment_icon"
            />

        <RelativeLayout
            android:id="@+id/animation_pay"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_height="197dp"
            >

            <ImageView
                android:id="@+id/pay_card"
                android:layout_width="343dp"
                android:layout_height="match_parent"
                android:background="@drawable/border_payment" />

            <TextView
                android:id="@+id/status_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:text="Belum Bayar"
                android:textColor="@color/white"
                android:textFontWeight="500"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif"
                android:text="Terimakasih sudah berlangganan
Semangat Belajar Champs"
                android:textColor="@color/white"
                android:textFontWeight="1000"
                android:textSize="20sp" />


        </RelativeLayout>
    </LinearLayout>


</LinearLayout>