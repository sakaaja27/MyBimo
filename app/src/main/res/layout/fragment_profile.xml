<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgprofile"
    tools:context="fragment.Profile">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mybimo_bluefont"
            />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image_profile"
            android:layout_marginTop="60dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/icon_profile"
            android:background="@color/black"
            app:strokeColor="@color/black"
            app:strokeWidth="3dp"
            app:shapeAppearanceOverlay="@style/circular"
            />
        <TextView
            android:id="@+id/auth_name"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="sans-serif"
            android:textFontWeight="400"
            />

        <TextView
            android:id="@+id/email"
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#02ABFA"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:textFontWeight="400"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_editprofile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_prof"
            android:drawableStart="@drawable/icon_prof"
            android:drawablePadding="30dp"
            android:paddingStart="20dp"
            android:text="Edit Profile"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            style="@android:style/Widget.Button"
            android:textAlignment="viewStart"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reset"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_prof"
            android:drawableStart="@drawable/icon_pass"
            android:drawablePadding="30dp"
            android:paddingStart="20dp"
            android:text="Reset Password"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            style="@android:style/Widget.Button"
            android:textAlignment="viewStart"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sign_out"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_prof"
            android:drawableStart="@drawable/icon_signout"
            android:drawablePadding="30dp"
            android:paddingStart="20dp"
            android:text="Sign Out"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            style="@android:style/Widget.Button"
            android:textAlignment="viewStart"
            />



    </LinearLayout>


</FrameLayout>